<aura:component implements="flexipage:availableForAllPageTypes,force:hasSObjectName,force:hasRecordId" access="global">
	<aura:attribute name="fieldsList" type="String[]"
                    default="['Id', 'Name', 'BillingAddress', 'Phone', 'Type', 'AccountNumber']"/>
    <div class="THIS">
    	<lightning:recordForm
        recordId="{!v.recordId}"
        objectApiName="Account"
        fields="{!v.fieldsList}"
        columns="2"                      
        mode="view" 
        onsuccess="{!c.myAction}"/>
    </div>
</aura:component>